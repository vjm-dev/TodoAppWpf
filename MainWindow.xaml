<Window x:Class="TodoAppWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Todo App" Height="700" Width="900" MinWidth="600" MinHeight="500">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Input section -->
        <GroupBox Grid.Row="0" Header="New Task" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <Label Grid.Row="0" Grid.Column="0" Content="Title*" 
               Margin="0,0,5,5" VerticalAlignment="Center"/>
                <TextBox x:Name="txtTitle" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"
                 Margin="0,0,0,5" Padding="3" Text=""
                 TextChanged="txtTitle_TextChanged"/>
                <TextBlock x:Name="txtTitleError" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                   Foreground="Red" FontSize="10" TextWrapping="Wrap" Margin="0,0,0,5"
                   Visibility="Collapsed"/>

                <!-- Description -->
                <Label Grid.Row="2" Grid.Column="0" Content="Description*" 
               Margin="0,0,5,5" VerticalAlignment="Center"/>
                <TextBox x:Name="txtDescription" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
                 Margin="0,0,0,5" Padding="3" Text="" 
                 AcceptsReturn="True" TextWrapping="Wrap" MinHeight="60"
                 TextChanged="txtDescription_TextChanged"
                 VerticalScrollBarVisibility="Auto"/>
                <TextBlock x:Name="txtDescriptionError" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"
                   Foreground="Red" FontSize="10" TextWrapping="Wrap" Margin="0,0,0,5"
                   Visibility="Collapsed"/>

                <!-- Status -->
                <Label Grid.Row="4" Grid.Column="0" Content="Status" 
               Margin="0,0,5,0" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbStatus" Grid.Row="4" Grid.Column="1" 
                  SelectedIndex="0" Margin="0,0,5,0">
                    <ComboBoxItem Content="Pending"/>
                    <ComboBoxItem Content="Under review"/>
                    <ComboBoxItem Content="Done"/>
                </ComboBox>

                <!-- Reminder -->
                <Label Grid.Row="5" Grid.Column="0" Content="Reminder" 
                       Margin="0,5,5,0" VerticalAlignment="Center"/>
                <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" Margin="0,5,5,0">
                    <DatePicker x:Name="dpReminderDate" Width="120"
                                SelectedDateChanged="ReminderDate_Changed"/>
                    <ComboBox x:Name="cmbReminderTime" Width="80" Margin="5,0,0,0"
                              SelectedIndex="0">
                        <ComboBoxItem Content="00:00"/>
                        <ComboBoxItem Content="00:30"/>
                        <ComboBoxItem Content="01:00"/>
                        <ComboBoxItem Content="01:30"/>
                        <ComboBoxItem Content="02:00"/>
                        <ComboBoxItem Content="02:30"/>
                        <ComboBoxItem Content="03:00"/>
                        <ComboBoxItem Content="03:30"/>
                        <ComboBoxItem Content="04:00"/>
                        <ComboBoxItem Content="04:30"/>
                        <ComboBoxItem Content="05:00"/>
                        <ComboBoxItem Content="05:30"/>
                        <ComboBoxItem Content="06:00"/>
                        <ComboBoxItem Content="06:30"/>
                        <ComboBoxItem Content="07:00"/>
                        <ComboBoxItem Content="07:30"/>
                        <ComboBoxItem Content="08:00"/>
                        <ComboBoxItem Content="08:30"/>
                        <ComboBoxItem Content="09:00"/>
                        <ComboBoxItem Content="09:30"/>
                        <ComboBoxItem Content="10:00"/>
                        <ComboBoxItem Content="10:30"/>
                        <ComboBoxItem Content="11:00"/>
                        <ComboBoxItem Content="11:30"/>
                        <ComboBoxItem Content="12:00"/>
                        <ComboBoxItem Content="12:30"/>
                        <ComboBoxItem Content="13:00"/>
                        <ComboBoxItem Content="13:30"/>
                        <ComboBoxItem Content="14:00"/>
                        <ComboBoxItem Content="14:30"/>
                        <ComboBoxItem Content="15:00"/>
                        <ComboBoxItem Content="15:30"/>
                        <ComboBoxItem Content="16:00"/>
                        <ComboBoxItem Content="16:30"/>
                        <ComboBoxItem Content="17:00"/>
                        <ComboBoxItem Content="17:30"/>
                        <ComboBoxItem Content="18:00"/>
                        <ComboBoxItem Content="18:30"/>
                        <ComboBoxItem Content="19:00"/>
                        <ComboBoxItem Content="19:30"/>
                        <ComboBoxItem Content="20:00"/>
                        <ComboBoxItem Content="20:30"/>
                        <ComboBoxItem Content="21:00"/>
                        <ComboBoxItem Content="21:30"/>
                        <ComboBoxItem Content="22:00"/>
                        <ComboBoxItem Content="22:30"/>
                        <ComboBoxItem Content="23:00"/>
                        <ComboBoxItem Content="23:30"/>
                    </ComboBox>
                </StackPanel>
                <Button x:Name="btnClearReminder" Grid.Row="5" Grid.Column="2" 
                Content="Clear" Padding="10,5" Margin="0,5,0,0"
                Click="btnClearReminder_Click"/>

                <Button x:Name="btnAdd" Grid.Row="6" Grid.Column="2" 
                Content="Add" Padding="20,5" Click="btnAdd_Click" Margin="0,5,0,0"/>

                <TextBlock Text="* These fields are mandatory." Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                   Margin="0,5,0,0" Foreground="DarkSlateGray" TextWrapping="Wrap" VerticalAlignment="Center"/>
            </Grid>
        </GroupBox>

        <!-- Filter and sort section -->
        <GroupBox Grid.Row="1" Header="Filter and sort" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Column="0" Content="Filter by status:" 
                       Margin="0,0,5,0" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbFilterStatus" Grid.Column="1" 
                          SelectedIndex="0" Margin="0,0,10,0" SelectionChanged="cmbFilterStatus_SelectionChanged">
                    <ComboBoxItem Content="All"/>
                    <ComboBoxItem Content="Pending"/>
                    <ComboBoxItem Content="Under review"/>
                    <ComboBoxItem Content="Done"/>
                </ComboBox>

                <Label Grid.Column="2" Content="Sort by:" 
                       Margin="0,0,5,0" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbSortBy" Grid.Column="3" 
                          SelectedIndex="0" Margin="0,0,10,0" SelectionChanged="cmbSortBy_SelectionChanged">
                    <ComboBoxItem Content="Creation Date (Newest)"/>
                    <ComboBoxItem Content="Creation Date (Oldest)"/>
                    <ComboBoxItem Content="Modification Date (Newest)"/>
                    <ComboBoxItem Content="Modification Date (Oldest)"/>
                    <ComboBoxItem Content="Title (A-Z)"/>
                    <ComboBoxItem Content="Title (Z-A)"/>
                    <ComboBoxItem Content="Status"/>
                </ComboBox>

                <Button x:Name="btnClearFilters" Grid.Column="4" 
                        Content="Clear filters" Padding="10,5" Click="btnClearFilters_Click"/>
            </Grid>
        </GroupBox>

        <!-- Tasks list -->
        <GroupBox Grid.Row="2" Header="Tasks" Margin="0,0,0,10">
            <Grid>
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <ListBox x:Name="lstTasks" SelectionChanged="lstTasks_SelectionChanged"
                     ScrollViewer.VerticalScrollBarVisibility="Disabled"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="10" Margin="0,5" BorderThickness="1" 
                                BorderBrush="#FFCCCCCC" CornerRadius="5">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Title -->
                                        <TextBlock Grid.Row="0" Text="{Binding Title}" 
                                           FontWeight="Bold" FontSize="14"
                                           TextTrimming="CharacterEllipsis"/>

                                        <!-- Description with scroll -->
                                        <ScrollViewer Grid.Row="1" MaxHeight="120" 
                                              VerticalScrollBarVisibility="Auto"
                                              HorizontalScrollBarVisibility="Auto"
                                              Margin="0,8,0,8">
                                            <TextBlock Text="{Binding Description}" 
                                               TextWrapping="Wrap" FontSize="12"/>
                                        </ScrollViewer>

                                        <!-- Reminder info -->
                                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,5"
                                            Visibility="{Binding HasReminder, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <TextBlock Text="⏰ Reminder: " FontSize="10" Foreground="DarkOrange"/>
                                            <TextBlock Text="{Binding ReminderDate, StringFormat=dd/MM/yyyy HH:mm}" 
                                               FontSize="10" Foreground="DarkOrange"/>
                                        </StackPanel>

                                        <!-- Dates -->
                                        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,8">
                                            <TextBlock Text="Created: " FontSize="10" Foreground="Gray"/>
                                            <TextBlock Text="{Binding CreatedDate, StringFormat=dd/MM/yyyy HH:mm:ss}" 
                                               FontSize="10" Foreground="Gray" Margin="0,0,15,0"/>
                                            <TextBlock Text="Modified: " FontSize="10" Foreground="Gray"/>
                                            <TextBlock Text="{Binding ModifiedDate, StringFormat=dd/MM/yyyy HH:mm:ss}" 
                                               FontSize="10" Foreground="Gray"/>
                                        </StackPanel>

                                        <!-- Status and delete button -->
                                        <StackPanel Grid.Row="4" Orientation="Horizontal" 
                                            HorizontalAlignment="Left">
                                            <Border Background="{Binding StatusColor}" CornerRadius="3" 
                                            Padding="8,4" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Status}" Margin="0,0,10,0" 
                                                   Foreground="White" FontWeight="SemiBold"
                                                   FontSize="11"/>
                                            </Border>
                                            <Button Content="Delete" Padding="12,4" 
                                            Click="btnDelete_Click" Tag="{Binding Id}"
                                            FontSize="11"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </Grid>
        </GroupBox>

        <!-- Action buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnUpdate" Content="Modify" Padding="20,5" 
                    Margin="0,0,10,0" Click="btnUpdate_Click" IsEnabled="False"/>
            <Button x:Name="btnMarkComplete" Content="Mark as Done" 
                    Padding="20,5" Click="btnMarkComplete_Click" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
