<Window x:Class="TodoAppWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:TodoAppWpf.Controls"
        mc:Ignorable="d"
        Title="Todo App" Height="700" Width="900" MinWidth="600" MinHeight="450">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Left Panel: New Task, Filter, Tasks, Action Buttons -->
        <GroupBox Grid.Column="0" Header="TODO Management">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- New Task Section -->
                <GroupBox Grid.Row="0" Header="New Task" Margin="0,0,0,10">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Title -->
                        <Label Grid.Row="0" Grid.Column="0" Content="Title*" Margin="0,0,5,5" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtTitle" Grid.Row="0" Grid.Column="1" 
                                 Margin="0,0,0,5" Padding="3" Text=""
                                 TextChanged="txtTitle_TextChanged"/>
                        <TextBlock x:Name="txtTitleError" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                   Foreground="Red" FontSize="10" TextWrapping="Wrap" Margin="0,0,0,5"
                                   Visibility="Collapsed"/>

                        <!-- Description -->
                        <Label Grid.Row="2" Grid.Column="0" Content="Description*" Margin="0,0,5,5" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtDescription" Grid.Row="2" Grid.Column="1" 
                                 Margin="0,0,0,5" Padding="3" Text="" 
                                 AcceptsReturn="True" TextWrapping="Wrap" MinHeight="80" MaxHeight="100"
                                 TextChanged="txtDescription_TextChanged"
                                 VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"/>
                        <TextBlock x:Name="txtDescriptionError" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                   Foreground="Red" FontSize="10" TextWrapping="Wrap" Margin="0,0,0,5"
                                   Visibility="Collapsed"/>

                        <!-- Status -->
                        <Label Grid.Row="4" Grid.Column="0" Content="Status" Margin="0,0,5,0" VerticalAlignment="Center"/>
                        <ComboBox x:Name="cmbStatus" Grid.Row="4" Grid.Column="1" SelectedIndex="0" Margin="0,0,0,0">
                            <ComboBoxItem Content="Pending"/>
                            <ComboBoxItem Content="Under review"/>
                            <ComboBoxItem Content="Done"/>
                        </ComboBox>

                        <!-- Add button and mandatory note -->
                        <Button x:Name="btnAdd" Grid.Row="5" Grid.Column="1" 
                                Content="Add" Padding="20,5" Click="btnAdd_Click" Margin="0,5,0,0"
                                HorizontalAlignment="Right"/>
                        <TextBlock Text="* These fields are mandatory." Grid.Row="5" Grid.Column="0" 
                                   Margin="0,5,0,0" Foreground="DarkSlateGray" TextWrapping="Wrap" 
                                   VerticalAlignment="Center"/>
                    </Grid>
                </GroupBox>

                <!-- Filter and sort section -->
                <GroupBox Grid.Row="1" Header="Filter and sort" Margin="0,0,0,10">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Column="0" Content="Filter by status:" Margin="0,0,5,0" VerticalAlignment="Center"/>
                        <ComboBox x:Name="cmbFilterStatus" Grid.Column="1" SelectedIndex="0" Margin="0,0,10,0" SelectionChanged="cmbFilterStatus_SelectionChanged">
                            <ComboBoxItem Content="All"/>
                            <ComboBoxItem Content="Pending"/>
                            <ComboBoxItem Content="Under review"/>
                            <ComboBoxItem Content="Done"/>
                        </ComboBox>

                        <Label Grid.Column="2" Content="Sort by:" Margin="0,0,5,0" VerticalAlignment="Center"/>
                        <ComboBox x:Name="cmbSortBy" Grid.Column="3" SelectedIndex="0" Margin="0,0,10,0" SelectionChanged="cmbSortBy_SelectionChanged">
                            <ComboBoxItem Content="Creation Date (Newest)"/>
                            <ComboBoxItem Content="Creation Date (Oldest)"/>
                            <ComboBoxItem Content="Modification Date (Newest)"/>
                            <ComboBoxItem Content="Modification Date (Oldest)"/>
                            <ComboBoxItem Content="Title (A-Z)"/>
                            <ComboBoxItem Content="Title (Z-A)"/>
                            <ComboBoxItem Content="Status"/>
                        </ComboBox>

                        <Button x:Name="btnClearFilters" Grid.Column="4" Content="Clear filters" Padding="10,5" Click="btnClearFilters_Click"/>
                    </Grid>
                </GroupBox>

                <!-- Tasks list -->
                <GroupBox Grid.Row="2" Header="Tasks">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                            <ListBox x:Name="lstTasks" SelectionChanged="lstTasks_SelectionChanged"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                     HorizontalContentAlignment="Stretch">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="5" Margin="0,5" BorderThickness="1" BorderBrush="#FFCCCCCC" CornerRadius="5">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- Title -->
                                                <TextBlock Grid.Row="0" Text="{Binding Title}" FontWeight="Bold" FontSize="14" TextTrimming="CharacterEllipsis"/>

                                                <!-- Description with scroll -->
                                                <ScrollViewer Grid.Row="1" MaxHeight="120" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="0,8,0,8">
                                                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap" FontSize="12"/>
                                                </ScrollViewer>

                                                <!-- Reminder info -->
                                                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,5"
                                                            Visibility="{Binding HasReminder, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <TextBlock Text="⏰ Reminder: " FontSize="10" Foreground="DarkOrange"/>
                                                    <TextBlock Text="{Binding ReminderDate, StringFormat=dd/MM/yyyy HH:mm}" 
                                                               FontSize="10" Foreground="DarkOrange"/>
                                                </StackPanel>

                                                <!-- Dates -->
                                                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,8">
                                                    <TextBlock Text="Created: " FontSize="10" Foreground="Gray"/>
                                                    <TextBlock Text="{Binding CreatedDate, StringFormat=dd/MM/yyyy HH:mm:ss}" 
                                                               FontSize="10" Foreground="Gray" Margin="0,0,15,0"/>
                                                    <TextBlock Text="Modified: " FontSize="10" Foreground="Gray"/>
                                                    <TextBlock Text="{Binding ModifiedDate, StringFormat=dd/MM/yyyy HH:mm:ss}" 
                                                               FontSize="10" Foreground="Gray"/>
                                                </StackPanel>

                                                <!-- Status and delete button -->
                                                <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Left">
                                                    <Border Background="{Binding StatusColor}" CornerRadius="3" Padding="8,4" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Status}" Margin="0,0,10,0" Foreground="White" FontWeight="SemiBold" FontSize="11"/>
                                                    </Border>
                                                    <Button Content="Delete" Padding="12,4" Click="btnDelete_Click" Tag="{Binding Id}" FontSize="11"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </ScrollViewer>

                        <!-- Action buttons -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,10">
                            <Button x:Name="btnUpdate" Content="Modify" Padding="20,5" Margin="0,0,10,0" Click="btnUpdate_Click" IsEnabled="False"/>
                            <Button x:Name="btnMarkComplete" Content="Mark as Done" Padding="20,5" Click="btnMarkComplete_Click" IsEnabled="False"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </Grid>
        </GroupBox>

        <!-- Reminder section (right side) -->
        <GroupBox Grid.Column="2" Header="Reminder" Margin="10,0,0,0">
            <StackPanel Margin="5">
                <controls:DateTimePicker x:Name="dateTimePicker"/>
                <Button x:Name="btnClearReminder" Content="Clear Reminder" HorizontalAlignment="Right" Margin="0,20,0,0"
                        Click="btnClearReminder_Click" Padding="5,2"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
